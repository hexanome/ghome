mixin display(rules)
  - each r in rules
    li= r.name
    ul
      mixin display(r.children)

header
  h1 GHome
.box
  h1 Sensors
  table
    thead
      tr
        th Sensor
        th Value
    tbody
      - each s in sensors
        tr
          td= s.name
          td= s.val
.box
  h1 Rules
  ul
    mixin display(rules)
